doctype html
html(class='no-js', lang='en', ng-app='tpm')

    head
        meta(charset='utf-8')

        title= name + ' | ' + description

        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(name='description', content=description)

        link(rel='stylesheet', href='bower_components/normalize-css/normalize.css')
        link(rel='stylesheet', href='bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet', href='bower_components/angular-feedback/dist/feedback.min.css')
        link(rel='stylesheet', href='css/style.css')
        link(rel='stylesheet', href='css/bootstrap-overrides.css')
        link(rel='stylesheet', href='css/animations.css')

    body(ng-class='{ "is-auth": isAuth }')
        .container

            nav.navbar.navbar-default.navbar-fixed-top.ng-cloak(ng-if='isAuth', role='navigation')
                //- Brand and toggle get grouped for better mobile display
                .navbar-header
                    button#navbar-toggle.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='./')
                        img(src='./images/tpm-logo.svg', alt='tPM', height='100%')

                //- Collect the nav links, forms, and other content for toggling
                #navbar.collapse.navbar-collapse.clearfix(ng-controller='MenuController')
                    ul.nav.navbar-nav.navbar-left
                        li(ng-class='{ active: isActive("projects")}')
                            a.btn.btn-link(href='#projects', ng-click='collapseMenu()') Projects
                        li(ng-class='{ active: isActive("clients")}')
                            a.btn.btn-link(href='#clients', ng-click='collapseMenu()') Clients
                        li(ng-class='{ active: isActive("settings")}')
                            a.btn.btn-link(href='#settings', ng-click='collapseMenu()') Settings
                    .nav.navbar-nav.navbar-right
                        a.btn.btn-default.navbar-btn(href='#logout') Logout

            //- all content goes here
            div.animate-slideFade(ng-view='ng-view')

            footer.app-footer.text-center
                hr
                div.hidden-xs
                    | Developed by&nbsp;
                    a(href='https://github.com/andreipfeiffer', popover-placement='top', popover-trigger='mouseenter', popover='Visit Github page') Andrei Pfeiffer
                    br
                a(href='https://github.com/andreipfeiffer/tpm/releases')
                    samp.text-muted= 'v' + version


    script(src='bower_components/jquery/dist/jquery.min.js')
    script(src='bower_components/bootstrap/dist/js/bootstrap.min.js')
    script(src='bower_components/angular/angular.min.js')
    script(src='bower_components/angular-route/angular-route.min.js')
    script(src='bower_components/angular-resource/angular-resource.min.js')
    script(src='bower_components/angular-bootstrap/ui-bootstrap.min.js')
    script(src='bower_components/angular-bootstrap/ui-bootstrap-tpls.min.js')
    script(src='bower_components/moment/min/moment.min.js')
    script(src='bower_components/angular-ui-utils/ui-utils.min.js')
    script(src='bower_components/angular-touch/angular-touch.min.js')
    script(src='bower_components/angular-media-queries/match-media.js')
    script(src='bower_components/angular-feedback/dist/feedback.min.js')
    script(src='bower_components/angular-animate/angular-animate.min.js')

    script(src='js/app.js')
    script(src='js/utils.js')
    script(src='js/controllers/authControllers.js')
    script(src='js/controllers/headerControllers.js')
    script(src='js/controllers/projectsControllers.js')
    script(src='js/controllers/clientsControllers.js')
    script(src='js/controllers/settingsControllers.js')
    script(src='js/services.js')
    script(src='js/interceptors.js')
    script(src='js/directives.js')
    script(src='js/filters.js')
